# RSS阅读器环境配置

# 服务器配置
PORT=3000
HOST=localhost
NODE_ENV=development

# 数据库配置
DB_TYPE=sqlite
DB_PATH=./data/rss-reader.db
DB_VERBOSE=false

# RSS解析配置
RSS_TIMEOUT=30000
RSS_CONCURRENCY=5
RSS_USER_AGENT="RSS Reader/1.0"

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/rss-reader.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# 安全配置
SESSION_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# 外部服务
# 如果需要使用外部RSS服务或API
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com

# 邮件通知（可选）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# 备份配置
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_PATH=./backups

# 开发配置
DEBUG=false
VERBOSE=false